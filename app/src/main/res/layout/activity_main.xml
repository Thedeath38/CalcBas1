<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thedeath38.calcbas1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="none"
            android:paddingRight="15dp"
            android:hint="0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_dark" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textEnd">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingTop="20dp">

                <Button
                    android:id="@+id/bt_mc"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="MC" />

                <Button
                    android:id="@+id/bt_mm"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="M+" />

                <Button
                    android:id="@+id/bt_mmen"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="m-" />

                <Button
                    android:id="@+id/bt_mr"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="MR" />

                <Button
                    android:id="@+id/bt_sig"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="+/-" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/bt_raiz"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="âˆš" />

                <Button
                    android:id="@+id/bt_1"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="number"
                    android:text="1" />

                <Button
                    android:id="@+id/bt_2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="number"
                    android:text="2" />

                <Button
                    android:id="@+id/bt_3"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="number"
                    android:text="3" />

                <Button
                    android:id="@+id/bt_div"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="opr_arit"
                    android:text="/" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/bt_porcent"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="%" />

                <Button
                    android:id="@+id/bt_4"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="number"
                    android:text="4" />

                <Button
                    android:id="@+id/bt_5"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="number"
                    android:text="5" />

                <Button
                    android:id="@+id/bt_6"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="number"
                    android:text="6" />

                <Button
                    android:id="@+id/bt_mult"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="opr_arit"
                    android:text="*" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/bt_ce"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="CE" />

                <Button
                    android:id="@+id/bt_7"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="number"
                    android:text="7" />

                <Button
                    android:id="@+id/bt_8"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="number"
                    android:text="8" />

                <Button
                    android:id="@+id/bt_9"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="number"
                    android:text="9" />

                <Button
                    android:id="@+id/bt_menos"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="opr_arit"
                    android:text="-" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/bt_c"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="C" />

                <Button
                    android:id="@+id/bt_0"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="number"
                    android:text="0" />

                <Button
                    android:id="@+id/bt_punt"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="." />

                <Button
                    android:id="@+id/bt_igual"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="=" />

                <Button
                    android:id="@+id/bt_sum"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:onClick="opr_arit"
                    android:text="+" />
            </TableRow>

        </TableLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
