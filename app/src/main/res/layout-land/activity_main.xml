<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thedeath38.calcbas1.MainActivity">

    <EditText
        android:id="@+id/et_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:enabled="false"
        android:hint="0"
        android:inputType="none"
        android:paddingRight="15dp"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="355dp"
        android:layout_height="243dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/bt_mc"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:text="MC" />

            <Button
                android:id="@+id/bt_mm"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:text="M+" />

            <Button
                android:id="@+id/bt_mmen"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:text="m-" />

            <Button
                android:id="@+id/bt_mr"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:text="MR" />

            <Button
                android:id="@+id/bt_sig"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:text="+/-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_raiz"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:text="âˆš" />

            <Button
                android:id="@+id/bt_1"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="number"
                android:text="1" />

            <Button
                android:id="@+id/bt_2"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="number"
                android:text="2" />

            <Button
                android:id="@+id/bt_3"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="number"
                android:text="3" />

            <Button
                android:id="@+id/bt_div"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="opr_arit"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_porcent"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:text="%" />

            <Button
                android:id="@+id/bt_4"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="number"
                android:text="4" />

            <Button
                android:id="@+id/bt_5"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="number"
                android:text="5" />

            <Button
                android:id="@+id/bt_6"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="number"
                android:text="6" />

            <Button
                android:id="@+id/bt_mult"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="opr_arit"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_ce"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:text="CE" />

            <Button
                android:id="@+id/bt_7"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="number"
                android:text="7" />

            <Button
                android:id="@+id/bt_8"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="number"
                android:text="8" />

            <Button
                android:id="@+id/bt_9"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="number"
                android:text="9" />

            <Button
                android:id="@+id/bt_menos"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="opr_arit"
                android:text="-" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_c"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:text="C" />

            <Button
                android:id="@+id/bt_0"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="number"
                android:text="0" />

            <Button
                android:id="@+id/bt_punt"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:text="." />

            <Button
                android:id="@+id/bt_igual"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:text="=" />

            <Button
                android:id="@+id/bt_sum"
                android:layout_width="70dp"
                android:layout_height="43dp"
                android:onClick="opr_arit"
                android:text="+" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:text="Dec"
        app:layout_constraintStart_toEndOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/et_display" />

    <Button
        android:id="@+id/button2"
        android:layout_width="70dp"
        android:layout_height="43dp"
        android:text="Bin"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/et_display" />

    <Button
        android:id="@+id/button3"
        android:layout_width="70dp"
        android:layout_height="43dp"
        android:text="Hex"
        app:layout_constraintStart_toEndOf="@+id/button2"
        tools:layout_editor_absoluteY="45dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="70dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button5"
        android:layout_width="70dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:text="C"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        tools:layout_editor_absoluteX="391dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="70dp"
        android:layout_height="43dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="A"
        app:layout_constraintStart_toEndOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button7"
        android:layout_width="70dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:text="E"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        tools:layout_editor_absoluteX="391dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="70dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="F"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button9"
        android:layout_width="70dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

</android.support.constraint.ConstraintLayout>
